#!/bin/bash -e
##
set -o xtrace
set -o errexit -o nounset
# This installs the FUSE userspace support.  The required files are
# found in an RPM archive provided by the `suse-fuse` package.

RPMS=/var/vcap/packages/suse-fuse

echo Installing SUSE userspace FUSE support.

cd /
zypper \
    --non-interactive \
    --no-remote \
    --no-refresh \
    install \
       ${RPMS}/*/*/*.rpm

echo Installation done.

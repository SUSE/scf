---
name: persi-create-service

description: This job will create an instance of local volume persistent storage.

packages:
  - cli
  - ruby-2.3
  - service-registration-utils

templates:
  run.erb: bin/run

properties:
  cc.srv_api_uri:
    description: The cloudcontroller's api endpoint
  localbroker.password:
    description: "Basic auth password to verify on incoming Service Broker requests"
  localbroker.username:
    description: "Basic auth username to verify on incoming Service Broker requests"
    default: admin
  localbroker.port:
    description: "The port number that persi service broker listens on"
    default: 443
  hcf.uaa.internal-url:
    description: "URL to UAA that can be accessed before the cluster's domain is setup"
  ssl.skip_cert_verify:
    description: "True for insecure connections"
  uaa.clients.hcf_auto_config.secret:
    description: "The secret for the UAA client to set up Persi service broker"

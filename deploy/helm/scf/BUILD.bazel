package(default_visibility = ["//visibility:public"])

load("@bazel_tools//tools/build_defs/pkg:pkg.bzl", "pkg_tar")
load("//rules/helm:def.bzl", helm_package = "package")

filegroup(
    name = "chart_files_static",
    srcs = glob(
        ["**/*"],
        exclude = ["**/BUILD.bazel"],
    ),
)

pkg_tar(
    name = "cf_deployment",
    package_dir = "assets",
    srcs = [
        "@cf_deployment//:cf_deployment",
    ],
)

pkg_tar(
    name = "helm_charts_stable_nats",
    package_dir = "charts",
    srcs = ["@helm_charts_stable_nats//file"],
)

helm_package(
    name = "chart",
    srcs = [
        ":chart_files_static",
    ],
    tars = [
        ":cf_deployment",
        ":helm_charts_stable_nats",
        "//bosh/releases:pre_render_scripts",
    ],
    chart_name = "scf",
    chart_version = "3.0.0",
    app_version = "2.0",
)

#!/usr/bin/env bash

set -o errexit

: "${GIT_ROOT:=$(git rev-parse --show-toplevel)}"
source "${GIT_ROOT}/make/include/has_namespace"
source "${GIT_ROOT}/make/include/has_release"
source "${GIT_ROOT}/make/include/defaults"

printf "Stopping and cleaning up %s release...\\n" "${ISTIO_HELM_RELEASE}"

if has_release "${ISTIO_HELM_RELEASE}"; then
  helm delete --purge "${ISTIO_HELM_RELEASE}"
fi

if has_namespace "${ISTIO_NAMESPACE}"; then
  kubectl delete namespace "${ISTIO_NAMESPACE}"
fi

# Delete Custom Resource Definitions.
kubectl get customresourcedefinitions -o=go-template='{{range .items}}{{.metadata.name}}{{"\n"}}{{end}}' \
  | grep "istio.io" \
  | xargs --no-run-if-empty kubectl delete customresourcedefinitions

# Delete permission definitions.
kubectl get podsecuritypolicy -o=go-template='{{range .items}}{{.metadata.name}}{{"\n"}}{{end}}' \
  | grep "istio" \
  | xargs --no-run-if-empty kubectl delete podsecuritypolicy

kubectl get clusterrole -o=go-template='{{range .items}}{{.metadata.name}}{{"\n"}}{{end}}' \
  | grep "istio" \
  | xargs --no-run-if-empty kubectl delete clusterrole

kubectl get clusterrolebinding -o=go-template='{{range .items}}{{.metadata.name}}{{"\n"}}{{end}}' \
  | grep "istio-user" \
  | xargs --no-run-if-empty kubectl delete clusterrolebinding
